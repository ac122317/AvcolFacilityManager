@model AvcolFacilityManager.Models.Facility

@{
    ViewData["Title"] = "Create Facility";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 100%; max-width: 600px;">
        <div class="card-body">
            <h3 class="card-title mb-4 text-center">Add New Facility</h3>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="FacilityName" class="form-label">Facility Name</label>
                    <input asp-for="FacilityName" class="form-control" placeholder="e.g. Gymnasium" />
                    <span asp-validation-for="FacilityName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FacilityType" class="form-label">Facility Type</label>
                    <input asp-for="FacilityType" class="form-control" placeholder="e.g. Sports" />
                    <span asp-validation-for="FacilityType" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control" placeholder="e.g. 50" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <input type="submit" value="Create Facility" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
