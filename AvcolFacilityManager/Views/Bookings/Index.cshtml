@using AvcolFacilityManager.Models
@model PaginatedList<AvcolFacilityManager.Models.Bookings>

@{
    // Page title used in the layout
    ViewData["Title"] = "Bookings";
}

<!-- Page header -->
<div class="text-center my-4">
    <h1 class="display-4">Bookings</h1>
    <p class="lead">Manage and view your facility bookings.</p>
</div>

<!-- Button to create a new booking -->
    <div class="mb-3 text-start">
        <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-circle fs-5"></i> Create New Booking</a>
    </div>

<!-- Search form for filtering bookings -->
<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by facility name or first name..." />
        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
        <a class="btn btn-secondary" asp-action="Index">Reset</a>
    </div>
</form>

<!-- If there are no bookings, show an alert -->
@if (!Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No bookings were found.
    </div>
}
else
{
    <!-- If there are bookings, display them as cards in a responsive grid layout-->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm card-border">
                    <div class="card-body">
                        <h5 class="card-title">@item.AppUser.FirstName</h5>
                        <p class="card-text mb-1"><strong>Facility:</strong> @item.Facility.FacilityName</p>
                        <p class="card-text mb-1"><strong>Date:</strong> @item.Date.ToString("MMMM dd, yyyy")</p>
                        <p class="card-text mb-1"><strong>Start Time:</strong> @item.StartTime.ToString("hh:mm tt")</p>
                        <p class="card-text"><strong>End Time:</strong> @item.EndTime.ToString("hh:mm tt")</p>
                    </div>

                    <!-- Action buttons: Details, Edit, Delete -->
                    <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex flex-wrap justify-content-end gap-2">
                                <a class="btn btn-info btn-sm d-flex align-items-center gap-1"
                                   asp-action="Details" asp-route-id="@item.BookingId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-warning btn-sm d-flex align-items-center gap-1"
                                   asp-action="Edit" asp-route-id="@item.BookingId">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm d-flex align-items-center gap-1"
                                   asp-action="Delete" asp-route-id="@item.BookingId">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Pagination controls (only shown if there are bookings) -->
@if (Model.Any())
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Previous page button (disabled if on first page) -->
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    <i class="bi bi-arrow-left"></i> Previous
                </a>
            </li>

            <!-- Current page indicator -->
            <li class="page-item disabled">
                <span class="page-link">Page @Model.PageIndex of @Model.TotalPages</span>
            </li>

            <!-- Next page button (disabled if on last page) -->
            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]">
                    Next <i class="bi bi-arrow-right"></i>
                </a>
            </li>
        </ul>
    </nav>
}
